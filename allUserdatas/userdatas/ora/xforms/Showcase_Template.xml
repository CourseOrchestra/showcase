			<xf:select ref="/schema/info/music">
				<xf:item>
					<xf:label>Классическая</xf:label>
					<xf:value>Классическая</xf:value>
				</xf:item>
				<xf:item>
					<xf:label>Инструментальная</xf:label>
					<xf:value>Инструментальная</xf:value>
